<!-- Modal -->
<div class="modal fade text-body" id="sliderVerticalModal" tabindex="-1" role="dialog" aria-labelledby="sliderVerticalModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="sliderVerticalModalLabel">Item Properties</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">

        <div class=" row ">
          <div class=" col ">
            <div class=" input-group mb-2 ">
              <div class=" input-group-prepend ">
                <span id="span_variable" class=" input-group-text " style=" width: 88px; ">Variable: </span>
              </div>
              <input id="text_field_variable" class="form-control text-center" placeholder="variable" value="<%= variable %>"></input>
            </div>
          </div>
        </div>

        <div class=" row ">
          <div class=" col ">
            <div class=" input-group mb-2 ">
              <div class=" input-group-prepend ">
                <span class=" input-group-text " style=" width: 88px; ">Color: </span>
              </div>
              <input id="text_field_color" class="form-control text-center" placeholder="color" value="<%= color %>"></input>
            </div>
          </div>
        </div>

      </div>

      <div class="modal-footer">
        <button id="btn_destroy" type="button" class="btn btn-danger" data-dismiss="modal"
          data-toggle="collapse" data-target="#navbarSupportedContent">Remove</button>

        <button type="button" class="btn btn-secondary" data-dismiss="modal"
          data-toggle="collapse" data-target="#navbarSupportedContent">Cancel</button>

        <button id="btn_save" type="button" class="btn btn-primary" data-dismiss="modal"
          data-toggle="collapse" data-target="#navbarSupportedContent">Save</button>
      </div>

    </div>
  </div>
</div>

