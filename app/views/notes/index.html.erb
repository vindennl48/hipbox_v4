<%= stylesheet_link_tag    params["controller"], media: 'screen' %>

<%= render 'navbar_index' %>

<div class=" container text-center ">

  <div class=" row mt-3 ">
    <div class=" col ">
      <button id="btn_add" type="button" class=" btn btn-sm btn-primary btn-block ">+Add</button>
    </div>
  </div>

  <div class=" row ">
    <div class=" col " type="note_list">
      <% for note in @notes do %>
        <%= render 'row', note: note %>
      <% end %>
    </div>
  </div>

</div>

<script>
  $("#btn_add").click(function(){
    $("div[type='note_list']").prepend(`
      <%= escape_javascript render 'row', note: Note.new(osc:"", variable:"") %>
    `)
  })
</script>
